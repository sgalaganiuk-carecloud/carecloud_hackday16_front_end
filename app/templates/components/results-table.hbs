<div class="container-fluid">
  <div class="row">
    <table class="col-xs-6 offset-xs-1 table table-hover">
      <thead>
        <tr>
            <th class="result-table-head">
              <td>{{scope}}</td>
            </th>
        </tr>
      </thead>

      <tbody class="result-table-body">
        {{!-- one row for each model object --}}
        {{#each data as |record|}}
        <tr>
          {{!-- and one column for each model value --}}
          {{#each-in record as |key value|}}
            {{value}}
          {{/each-in}}
        </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
</div>
